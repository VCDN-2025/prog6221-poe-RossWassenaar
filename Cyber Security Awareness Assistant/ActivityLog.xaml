<Window x:Class="Cyber_Security_Awareness_Assistant.ActivityLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cyber_Security_Awareness_Assistant"
        mc:Ignorable="d"
        Title="ActivityLog" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="ActivityList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,50,400,0"/>
        <Label x:Name="Label_ActivityListTitle" Content="Activity List" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="40" Width="141" FontSize="22"/>
        <Label x:Name="Label_ActivityStatsTitle" Content="Activity Stats" HorizontalAlignment="Left" Margin="427,10,0,0" VerticalAlignment="Top" Height="40" Width="141" FontSize="22"/>
        <Label x:Name="Label_TasksCreated" Content="Tasks Created: " HorizontalAlignment="Left" Margin="427,84,0,0" VerticalAlignment="Top" Height="29" Width="336" FontSize="16"/>
        <Label x:Name="Label_TasksCompleted" Content="Tasks Completed: " HorizontalAlignment="Left" Margin="427,118,0,0" VerticalAlignment="Top" Height="29" Width="336" FontSize="16"/>
        <Label x:Name="Label_RemindersSet" Content="Reminders Set: " HorizontalAlignment="Left" Margin="427,152,0,0" VerticalAlignment="Top" Height="29" Width="336" FontSize="16"/>
        <Label x:Name="Label_QuizAttemps" Content="Quiz Attempts: " HorizontalAlignment="Left" Margin="427,186,0,0" VerticalAlignment="Top" Height="29" Width="336" FontSize="16"/>
        <Button x:Name="Button_Exit" Content="Exit Activity Log" HorizontalAlignment="Left" Margin="506,365,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="46" Width="178" Click="Button_Exit_Click"/>

    </Grid>
</Window>
